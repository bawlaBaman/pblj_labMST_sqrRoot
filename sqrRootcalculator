import java.util.*;

public class SqrRootCalculator {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println(" Saiyam's Square Root Calculator");

        try {
            System.out.println("Enter a number: ");
            double ssnum = sc.nextDouble();

            if (ssnum < 0) {
                System.out.println("Cannot calculate negative square root.");
            } else {
                double sqrt = Math.sqrt(ssnum);
                System.out.println("Square root of " + ssnum + " is " + sqrt);
            }
        } catch (Exception e) {
            System.out.println("Invalid input.");
        }

        sc.close();
    }
}
